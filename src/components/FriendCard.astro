---
import type { Friend } from '../types/friend';
interface Props {
  friend: Friend;
}

const { friend } = Astro.props;
---

<a href={friend.link} target="_blank" rel="noopener noreferrer" class="block">
  <div class="group relative flex items-stretch overflow-hidden rounded-xl bg-gray-50 dark:bg-gray-800/50 transition-all hover:bg-gray-100 dark:hover:bg-gray-800">
    <div class="flex flex-row items-center gap-4 p-4 w-full">
      <div class="flex-shrink-0">
        <img src={friend.avatar} alt={friend.name} loading="lazy" class="w-12 h-12 rounded-lg object-cover bg-white" />
      </div>
      <div class="flex-grow min-w-0">
        <h3 class="text-base font-medium text-gray-900 dark:text-white truncate">{friend.name}</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1 line-clamp-1">{friend.description}</p>
      </div>
    </div>
    <div class="absolute right-0 inset-y-0 flex items-center pr-2">
      <div class="h-8 w-8 rounded-lg bg-gray-100/80 dark:bg-gray-700/80 flex items-center justify-center transition-colors group-hover:bg-primary-100 dark:group-hover:bg-primary-900/30">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-gray-600 dark:text-gray-400 transition-colors group-hover:text-primary-600 dark:group-hover:text-primary-400">
          <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd" />
        </svg>
      </div>
    </div>
  </div>
</a>
